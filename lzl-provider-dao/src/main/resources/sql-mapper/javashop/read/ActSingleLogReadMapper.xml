<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.ActSingleLogReadDao">

	<sql id="Base_Column_List" >
		id,act_single_id,member_id,seller_id,order_id,order_product_id,product_id,create_user_id,create_user_name,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.ActSingleLog">
        select <include refid="Base_Column_List" />
		from act_single_log
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.ActSingleLog">
        select <include refid="Base_Column_List" />
		from act_single_log
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from act_single_log
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="actSingleId != null and actSingleId !=''">
			and act_single_id = #{actSingleId}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="sellerId != null and sellerId !=''">
			and seller_id = #{sellerId}
			</if>
			<if test="orderId != null and orderId !=''">
			and order_id = #{orderId}
			</if>
			<if test="orderProductId != null and orderProductId !=''">
			and order_product_id = #{orderProductId}
			</if>
			<if test="productId != null and productId !=''">
			and product_id = #{productId}
			</if>
			<if test="createUserId != null and createUserId !=''">
			and create_user_id = #{createUserId}
			</if>
			<if test="createUserName != null and createUserName !=''">
			and create_user_name = #{createUserName}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>