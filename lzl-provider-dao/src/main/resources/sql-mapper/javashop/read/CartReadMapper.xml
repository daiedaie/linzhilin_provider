<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.CartReadDao">

	<sql id="Base_Column_List" >
		id,create_time,member_id,count,spec_id,spec_info,product_id,seller_id,product_goods_id,checked 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.Cart">
        select <include refid="Base_Column_List" />
		from cart
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.Cart">
        select <include refid="Base_Column_List" />
		from cart
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from cart
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="count != null and count !=''">
			and count = #{count}
			</if>
			<if test="specId != null and specId !=''">
			and spec_id = #{specId}
			</if>
			<if test="specInfo != null and specInfo !=''">
			and spec_info = #{specInfo}
			</if>
			<if test="productId != null and productId !=''">
			and product_id = #{productId}
			</if>
			<if test="sellerId != null and sellerId !=''">
			and seller_id = #{sellerId}
			</if>
			<if test="productGoodsId != null and productGoodsId !=''">
			and product_goods_id = #{productGoodsId}
			</if>
			<if test="checked != null and checked !=''">
			and checked = #{checked}
			</if>
        </where>
    </sql>

</mapper>