<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.LogProductClickReadDao">

	<sql id="Base_Column_List" >
		product_id,supplier_id,seller_id,member_id,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.LogProductClick">
        select <include refid="Base_Column_List" />
		from log_product_click
		where  
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.LogProductClick">
        select <include refid="Base_Column_List" />
		from log_product_click
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from log_product_click
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="productId != null and productId !=''">
			and product_id = #{productId}
			</if>
			<if test="supplierId != null and supplierId !=''">
			and supplier_id = #{supplierId}
			</if>
			<if test="sellerId != null and sellerId !=''">
			and seller_id = #{sellerId}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>