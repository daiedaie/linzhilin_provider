<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.LogRegionsApplyReadDao">

	<sql id="Base_Column_List" >
		member_id,city,address_info,latitude,longitude,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.LogRegionsApply">
        select <include refid="Base_Column_List" />
		from log_regions_apply
		where  
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.LogRegionsApply">
        select <include refid="Base_Column_List" />
		from log_regions_apply
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from log_regions_apply
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="city != null and city !=''">
			and city = #{city}
			</if>
			<if test="addressInfo != null and addressInfo !=''">
			and address_info = #{addressInfo}
			</if>
			<if test="latitude != null and latitude !=''">
			and latitude = #{latitude}
			</if>
			<if test="longitude != null and longitude !=''">
			and longitude = #{longitude}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>