<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.LogTransfersReadDao">

	<sql id="Base_Column_List" >
		transfers_id,seller_id,money_order,brokerage,money_real,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.LogTransfers">
        select <include refid="Base_Column_List" />
		from log_transfers
		where transfers_id = #{transfersId} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.LogTransfers">
        select <include refid="Base_Column_List" />
		from log_transfers
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from log_transfers
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="transfersId != null and transfersId !=''">
			and transfers_id = #{transfersId}
			</if>
			<if test="sellerId != null and sellerId !=''">
			and seller_id = #{sellerId}
			</if>
			<if test="moneyOrder != null and moneyOrder !=''">
			and money_order = #{moneyOrder}
			</if>
			<if test="brokerage != null and brokerage !=''">
			and brokerage = #{brokerage}
			</if>
			<if test="moneyReal != null and moneyReal !=''">
			and money_real = #{moneyReal}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>