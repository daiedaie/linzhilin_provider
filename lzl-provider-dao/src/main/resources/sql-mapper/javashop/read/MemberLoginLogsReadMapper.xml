<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.MemberLoginLogsReadDao">

	<sql id="Base_Column_List" >
		id,member_id,member_name,login_ip,create_time,source 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.MemberLoginLogs">
        select <include refid="Base_Column_List" />
		from member_login_logs
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.MemberLoginLogs">
        select <include refid="Base_Column_List" />
		from member_login_logs
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from member_login_logs
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="memberName != null and memberName !=''">
			and member_name = #{memberName}
			</if>
			<if test="loginIp != null and loginIp !=''">
			and login_ip = #{loginIp}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
			<if test="source != null and source !=''">
			and source = #{source}
			</if>
        </where>
    </sql>

</mapper>