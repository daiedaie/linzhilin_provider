<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.MemberReadDao">

	<sql id="Base_Column_List" >
		id,name,password,grade,grade_value,integral,register_time,last_login_time,last_login_ip,login_number,last_address_id,last_payment_code,gender,birthday,email,qq,mobile,phone,pwd_err_count,source,balance,balance_pwd,is_email_verify,is_sms_verify,sms_verify_code,email_verify_code,can_receive_sms,can_receive_email,status,update_time,avatar,open_id,sopen_id,session_id,push_id 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.Member">
        select <include refid="Base_Column_List" />
		from member
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.Member">
        select <include refid="Base_Column_List" />
		from member
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from member
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="name != null and name !=''">
			and name = #{name}
			</if>
			<if test="password != null and password !=''">
			and password = #{password}
			</if>
			<if test="grade != null and grade !=''">
			and grade = #{grade}
			</if>
			<if test="gradeValue != null and gradeValue !=''">
			and grade_value = #{gradeValue}
			</if>
			<if test="integral != null and integral !=''">
			and integral = #{integral}
			</if>
			<if test="registerTime != null and registerTime !=''">
			and register_time = #{registerTime}
			</if>
			<if test="lastLoginTime != null and lastLoginTime !=''">
			and last_login_time = #{lastLoginTime}
			</if>
			<if test="lastLoginIp != null and lastLoginIp !=''">
			and last_login_ip = #{lastLoginIp}
			</if>
			<if test="loginNumber != null and loginNumber !=''">
			and login_number = #{loginNumber}
			</if>
			<if test="lastAddressId != null and lastAddressId !=''">
			and last_address_id = #{lastAddressId}
			</if>
			<if test="lastPaymentCode != null and lastPaymentCode !=''">
			and last_payment_code = #{lastPaymentCode}
			</if>
			<if test="gender != null and gender !=''">
			and gender = #{gender}
			</if>
			<if test="birthday != null and birthday !=''">
			and birthday = #{birthday}
			</if>
			<if test="email != null and email !=''">
			and email = #{email}
			</if>
			<if test="qq != null and qq !=''">
			and qq = #{qq}
			</if>
			<if test="mobile != null and mobile !=''">
			and mobile = #{mobile}
			</if>
			<if test="phone != null and phone !=''">
			and phone = #{phone}
			</if>
			<if test="pwdErrCount != null and pwdErrCount !=''">
			and pwd_err_count = #{pwdErrCount}
			</if>
			<if test="source != null and source !=''">
			and source = #{source}
			</if>
			<if test="balance != null and balance !=''">
			and balance = #{balance}
			</if>
			<if test="balancePwd != null and balancePwd !=''">
			and balance_pwd = #{balancePwd}
			</if>
			<if test="isEmailVerify != null and isEmailVerify !=''">
			and is_email_verify = #{isEmailVerify}
			</if>
			<if test="isSmsVerify != null and isSmsVerify !=''">
			and is_sms_verify = #{isSmsVerify}
			</if>
			<if test="smsVerifyCode != null and smsVerifyCode !=''">
			and sms_verify_code = #{smsVerifyCode}
			</if>
			<if test="emailVerifyCode != null and emailVerifyCode !=''">
			and email_verify_code = #{emailVerifyCode}
			</if>
			<if test="canReceiveSms != null and canReceiveSms !=''">
			and can_receive_sms = #{canReceiveSms}
			</if>
			<if test="canReceiveEmail != null and canReceiveEmail !=''">
			and can_receive_email = #{canReceiveEmail}
			</if>
			<if test="status != null and status !=''">
			and status = #{status}
			</if>
			<if test="updateTime != null and updateTime !=''">
			and update_time = #{updateTime}
			</if>
			<if test="avatar != null and avatar !=''">
			and avatar = #{avatar}
			</if>
			<if test="openId != null and openId !=''">
			and open_id = #{openId}
			</if>
			<if test="sopenId != null and sopenId !=''">
			and sopen_id = #{sopenId}
			</if>
			<if test="sessionId != null and sessionId !=''">
			and session_id = #{sessionId}
			</if>
			<if test="pushId != null and pushId !=''">
			and push_id = #{pushId}
			</if>
        </where>
    </sql>

</mapper>