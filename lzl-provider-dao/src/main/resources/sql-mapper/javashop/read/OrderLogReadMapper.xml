<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.OrderLogReadDao">

	<sql id="Base_Column_List" >
		id,operating_id,operating_name,orders_id,orders_sn,content,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.OrderLog">
        select <include refid="Base_Column_List" />
		from order_log
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.OrderLog">
        select <include refid="Base_Column_List" />
		from order_log
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from order_log
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="operatingId != null and operatingId !=''">
			and operating_id = #{operatingId}
			</if>
			<if test="operatingName != null and operatingName !=''">
			and operating_name = #{operatingName}
			</if>
			<if test="ordersId != null and ordersId !=''">
			and orders_id = #{ordersId}
			</if>
			<if test="ordersSn != null and ordersSn !=''">
			and orders_sn = #{ordersSn}
			</if>
			<if test="content != null and content !=''">
			and content = #{content}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>