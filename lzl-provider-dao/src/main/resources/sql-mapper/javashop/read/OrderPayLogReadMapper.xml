<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.OrderPayLogReadDao">

	<sql id="Base_Column_List" >
		id,orders_id,orders_sn,pay_status,pay_content,pay_money,member_id,member_name,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.OrderPayLog">
        select <include refid="Base_Column_List" />
		from order_pay_log
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.OrderPayLog">
        select <include refid="Base_Column_List" />
		from order_pay_log
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from order_pay_log
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="ordersId != null and ordersId !=''">
			and orders_id = #{ordersId}
			</if>
			<if test="ordersSn != null and ordersSn !=''">
			and orders_sn = #{ordersSn}
			</if>
			<if test="payStatus != null and payStatus !=''">
			and pay_status = #{payStatus}
			</if>
			<if test="payContent != null and payContent !=''">
			and pay_content = #{payContent}
			</if>
			<if test="payMoney != null and payMoney !=''">
			and pay_money = #{payMoney}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="memberName != null and memberName !=''">
			and member_name = #{memberName}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>