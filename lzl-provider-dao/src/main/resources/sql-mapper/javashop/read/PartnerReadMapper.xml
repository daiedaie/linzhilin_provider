<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.PartnerReadDao">

	<sql id="Base_Column_List" >
		partner_id,member_id,real_name,invite_code,partner_status,update_time,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.Partner">
        select <include refid="Base_Column_List" />
		from partner
		where partner_id = #{partnerId} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.Partner">
        select <include refid="Base_Column_List" />
		from partner
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from partner
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="partnerId != null and partnerId !=''">
			and partner_id = #{partnerId}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="realName != null and realName !=''">
			and real_name = #{realName}
			</if>
			<if test="inviteCode != null and inviteCode !=''">
			and invite_code = #{inviteCode}
			</if>
			<if test="partnerStatus != null and partnerStatus !=''">
			and partner_status = #{partnerStatus}
			</if>
			<if test="updateTime != null and updateTime !=''">
			and update_time = #{updateTime}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>