<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.PromotionAlarmReadDao">

	<sql id="Base_Column_List" >
		promotion_alarm_id,promotion_id,seller_id,product_code,alarm_value,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.PromotionAlarm">
        select <include refid="Base_Column_List" />
		from promotion_alarm
		where promotion_alarm_id = #{promotionAlarmId} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.PromotionAlarm">
        select <include refid="Base_Column_List" />
		from promotion_alarm
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from promotion_alarm
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="promotionAlarmId != null and promotionAlarmId !=''">
			and promotion_alarm_id = #{promotionAlarmId}
			</if>
			<if test="promotionId != null and promotionId !=''">
			and promotion_id = #{promotionId}
			</if>
			<if test="sellerId != null and sellerId !=''">
			and seller_id = #{sellerId}
			</if>
			<if test="productCode != null and productCode !=''">
			and product_code = #{productCode}
			</if>
			<if test="alarmValue != null and alarmValue !=''">
			and alarm_value = #{alarmValue}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>