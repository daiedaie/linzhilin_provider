<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.PromotionAttendReadDao">

	<sql id="Base_Column_List" >
		promotion_attend_id,promotion_id,product_code,seller_id,member_id,num,is_valid,order_sn,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.PromotionAttend">
        select <include refid="Base_Column_List" />
		from promotion_attend
		where promotion_attend_id = #{promotionAttendId} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.PromotionAttend">
        select <include refid="Base_Column_List" />
		from promotion_attend
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from promotion_attend
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="promotionAttendId != null and promotionAttendId !=''">
			and promotion_attend_id = #{promotionAttendId}
			</if>
			<if test="promotionId != null and promotionId !=''">
			and promotion_id = #{promotionId}
			</if>
			<if test="productCode != null and productCode !=''">
			and product_code = #{productCode}
			</if>
			<if test="sellerId != null and sellerId !=''">
			and seller_id = #{sellerId}
			</if>
			<if test="memberId != null and memberId !=''">
			and member_id = #{memberId}
			</if>
			<if test="num != null and num !=''">
			and num = #{num}
			</if>
			<if test="isValid != null and isValid !=''">
			and is_valid = #{isValid}
			</if>
			<if test="orderSn != null and orderSn !=''">
			and order_sn = #{orderSn}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>