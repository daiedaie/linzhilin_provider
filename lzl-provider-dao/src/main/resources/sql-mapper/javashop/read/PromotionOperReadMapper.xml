<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.PromotionOperReadDao">

	<sql id="Base_Column_List" >
		promotion_oper_id,promotion_id,type,user_type,user_id,oper_user_id,remark,create_time 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.PromotionOper">
        select <include refid="Base_Column_List" />
		from promotion_oper
		where promotion_oper_id = #{promotionOperId} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.PromotionOper">
        select <include refid="Base_Column_List" />
		from promotion_oper
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from promotion_oper
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="promotionOperId != null and promotionOperId !=''">
			and promotion_oper_id = #{promotionOperId}
			</if>
			<if test="promotionId != null and promotionId !=''">
			and promotion_id = #{promotionId}
			</if>
			<if test="type != null and type !=''">
			and type = #{type}
			</if>
			<if test="userType != null and userType !=''">
			and user_type = #{userType}
			</if>
			<if test="userId != null and userId !=''">
			and user_id = #{userId}
			</if>
			<if test="operUserId != null and operUserId !=''">
			and oper_user_id = #{operUserId}
			</if>
			<if test="remark != null and remark !=''">
			and remark = #{remark}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
        </where>
    </sql>

</mapper>