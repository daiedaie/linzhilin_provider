<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.ProviderUserReadDao">

	<select id="getProviderUserByName" parameterType="java.lang.String" resultType="com.lzl.bean.javashop.ProviderUser">
		select <include refid="Base_Column_List"/>
		from provider_user
		where username like '%${value}%'
	</select>

	<sql id="Base_Column_List" >
		user_id,username,password,pwd_confirm,code,real_name,phone,job,provider_id,provider_roles_id,state,create_admin_id,create_time,update_admin_id,update_time,modify_time 
	</sql>
	
	<select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.ProviderUser">
        select <include refid="Base_Column_List"/>
		from provider_user
        <include refid="Where_Clause"/>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from provider_user
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="userId != null and userId !=''">
			and user_id = #{userId}
			</if>
			<if test="username != null and username !=''">
			and username = #{username}
			</if>
			<if test="password != null and password !=''">
			and password = #{password}
			</if>
			<if test="pwdConfirm != null and pwdConfirm !=''">
			and pwd_confirm = #{pwdConfirm}
			</if>
			<if test="code != null and code !=''">
			and code = #{code}
			</if>
			<if test="realName != null and realName !=''">
			and real_name = #{realName}
			</if>
			<if test="phone != null and phone !=''">
			and phone = #{phone}
			</if>
			<if test="job != null and job !=''">
			and job = #{job}
			</if>
			<if test="providerId != null and providerId !=''">
			and provider_id = #{providerId}
			</if>
			<if test="providerRolesId != null and providerRolesId !=''">
			and provider_roles_id = #{providerRolesId}
			</if>
			<if test="state != null and state !=''">
			and state = #{state}
			</if>
			<if test="createAdminId != null and createAdminId !=''">
			and create_admin_id = #{createAdminId}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
			<if test="updateAdminId != null and updateAdminId !=''">
			and update_admin_id = #{updateAdminId}
			</if>
			<if test="updateTime != null and updateTime !=''">
			and update_time = #{updateTime}
			</if>
			<if test="modifyTime != null and modifyTime !=''">
			and modify_time = #{modifyTime}
			</if>
        </where>
    </sql>

</mapper>