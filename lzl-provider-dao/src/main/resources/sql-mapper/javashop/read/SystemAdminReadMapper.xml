<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.SystemAdminReadDao">

	<sql id="Base_Column_List" >
		id,name,password,role_id,create_time,create_user,tel,status 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.SystemAdmin">
        select <include refid="Base_Column_List" />
		from system_admin
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.SystemAdmin">
        select <include refid="Base_Column_List" />
		from system_admin
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from system_admin
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
            and status != 3
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="name != null and name !=''">
			and name = #{name}
			</if>
			<if test="password != null and password !=''">
			and password = #{password}
			</if>
			<if test="roleId != null and roleId !=''">
			and role_id = #{roleId}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
			<if test="createUser != null and createUser !=''">
			and create_user = #{createUser}
			</if>
			<if test="tel != null and tel !=''">
			and tel = #{tel}
			</if>
			<if test="status != null and status !=''">
			and status = #{status}
			</if>
        </where>
    </sql>

</mapper>