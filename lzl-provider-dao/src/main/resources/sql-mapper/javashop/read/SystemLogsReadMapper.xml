<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.read.SystemLogsReadDao">

	<sql id="Base_Column_List" >
		id,opt_id,opt_name,opt_content,create_time,member_rule_id,opt_object,opt_object_id 
	</sql>

    <select id="getById" parameterType="Integer" resultType="com.lzl.bean.javashop.SystemLogs">
        select <include refid="Base_Column_List" />
		from system_logs
		where id = #{id} 
    </select>

    <select id="get" parameterType="java.util.Map" resultType="com.lzl.bean.javashop.SystemLogs">
        select <include refid="Base_Column_List" />
		from system_logs
        <include refid="Where_Clause"/>
		<if test="size != null and size &gt; 0">limit #{start},#{size}</if>
    </select>
	
	<select id="getCount" parameterType="java.util.Map" resultType="Integer">
        select count(*)
		from system_logs
        <include refid="Where_Clause"/>
    </select>
	
	<sql id="Where_Clause">
        <where>
			<if test="id != null and id !=''">
			and id = #{id}
			</if>
			<if test="optId != null and optId !=''">
			and opt_id = #{optId}
			</if>
			<if test="optName != null and optName !=''">
			and opt_name = #{optName}
			</if>
			<if test="optContent != null and optContent !=''">
			and opt_content = #{optContent}
			</if>
			<if test="createTime != null and createTime !=''">
			and create_time = #{createTime}
			</if>
			<if test="memberRuleId != null and memberRuleId !=''">
			and member_rule_id = #{memberRuleId}
			</if>
			<if test="optObject != null and optObject !=''">
			and opt_object = #{optObject}
			</if>
			<if test="optObjectId != null and optObjectId !=''">
			and opt_object_id = #{optObjectId}
			</if>
        </where>
    </sql>

</mapper>