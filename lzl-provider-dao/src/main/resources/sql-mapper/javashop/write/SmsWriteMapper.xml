<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.write.SmsWriteDao">
	
	<insert id="post">
		insert into sms (mobile,code,last_time )
		values (#{mobile},#{code},#{lastTime})
	</insert>

    <update id="put">
        update sms
        <set>
				mobile = #{mobile},
				code = #{code},
				last_time = #{lastTime},
        </set>
        where  
    </update>

</mapper>