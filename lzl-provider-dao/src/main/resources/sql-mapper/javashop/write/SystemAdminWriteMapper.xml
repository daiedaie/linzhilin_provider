<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzl.dao.javashop.write.SystemAdminWriteDao">
	
	<insert id="post">
		insert into system_admin (name,password,role_id,create_time,create_user,tel,status )
		values (#{name},#{password},#{roleId},now(),#{createUser},#{tel},#{status})
	</insert>

    <update id="put">
        update system_admin
        <set>
			<if test="name != null and name !=''">
			name = #{name},
			</if>
			<if test="password != null and password !=''">
			password = #{password},
			</if>
			<if test="roleId != null and roleId !=''">
			role_id = #{roleId},
			</if>
			<if test="tel != null and tel !=''">
			tel = #{tel},
			</if>
			<if test="status != null and status !=''">
			status = #{status},
			</if>		
        </set>
        where id = #{id} 
    </update>

</mapper>